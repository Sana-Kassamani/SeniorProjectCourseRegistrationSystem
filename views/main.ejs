  <style>
    body {
      font-family: Arial, sans-serif;
      
      color: #042630;
      margin: 0;
      padding: 20px; /* Adding padding to body */
      
    }

    .quote-container {
      text-align: center;
      padding: 20px;
      border-radius: 10px;
      background-color: #d0d6d6;
      box-shadow: 0 0 10px rgba(143, 146, 179, 0.1);
      max-width: 600px;
      margin: auto; /* Center horizontally */
      margin-top: 150px; /* Add margin top */
      transition: background-color 0.3s, transform 0.3s;
    }


    .quote {
      font-size: 20px;
      font-style: italic;
      color: #042630;
      margin-bottom: 10px;
    }

    .author {
      font-size: 18px;
      font-weight: bold;
      color: #777;
    }

    .links {
      display: flex;
      flex-wrap: wrap; /* Allow buttons to wrap to the next line on smaller screens */
      gap: 10px; /* Adjust the gap between buttons as needed */
      justify-content: center;
      align-items: center;
      margin-top: 20px;
    }

    .links a {
      text-decoration: none; /* To remove any default link styling */
      outline: none;
      box-shadow: none;
    
    }
    .links a:focus {
      text-decoration: none; /* To remove any default link styling */
      outline: none;
      color:#042630;
      box-shadow: none;

    
    }
    .links a:active {
      text-decoration: none; /* To remove any default link styling */
      outline: none;
      color:#042630;
      box-shadow: none;
      
    
    }
   /* zooming */
