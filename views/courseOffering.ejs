<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Offering</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <link href="main.css" rel="stylesheet">
  
</head>

<body>
  <%- include('NavBar') %>
    <div id="wrapper">
      <%- include('SideBar') %>

        <div id="page-content-wrapper">
          <div id="Offering">
            <h2 class="text-white">Course Offering</h2>
            <style>
              .container {
                margin-top: 50px;
              }

              .search-section {
                background-color: #f8f9fa;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
              }

              .search-section .form-control,
              .search-section .form-select {
                margin-bottom: 10px;
              }

              .search-section .btn {
                margin-top: 10px;
              }

              .course-list {
                margin-top: 20px;
              }

              .course-list .card {
                margin-bottom: 10px;
              }
            </style>



            <div class="container">
              <!-- Search and Filter Section -->
              <div class="search-section">
                <h4>Filter Courses</h4>
                <form method="GET" action="/course-offerings">
                  <div class="row">
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="courseCode" class="form-label">Course Code</label>
                        <input type="text" class="form-control" id="courseCode" name="courseCode"
                          value="<%= searchParams.courseCode || '' %>">
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="instructor" class="form-label">Instructor Name</label>
                        <input type="text" class="form-control" id="instructor" name="instructor"
                          value="<%= searchParams.instructor || '' %>">
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="day" class="form-label">Day</label>
                        <select class="form-select" id="day" name="day">
                          <option value="">Any</option>
                          <option value="Monday" <%=searchParams.day==='Monday' ? 'selected' : '' %>>Monday</option>
                          <option value="Tuesday" <%=searchParams.day==='Tuesday' ? 'selected' : '' %>>Tuesday</option>
                          <option value="Wednesday" <%=searchParams.day==='Wednesday' ? 'selected' : '' %>>Wednesday
                          </option>
                          <option value="Thursday" <%=searchParams.day==='Thursday' ? 'selected' : '' %>>Thursday
                          </option>
                          <option value="Friday" <%=searchParams.day==='Friday' ? 'selected' : '' %>>Friday</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="time" class="form-label">Time</label>
                        <input type="text" class="form-control" id="time" name="time"
                          value="<%= searchParams.time || '' %>">
                      </div>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary">Search</button>
                </form>
              </div>

              <!-- Course List Section -->
              <div class="course-list">
                <% if (offeredCourses && offeredCourses.length> 0) { %>
                  <% offeredCourses.forEach(course=> { %>
                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title">
                          <%= course.CourseCode %> - <%= course.CourseName %>
                        </h5>
                        <p class="card-text">Instructor: <%= course.InstructorName %>
                        </p>
                        <p class="card-text">
                          <%= course.Time %>
                            <%= course.Days %>
                        </p>
                        <p class="card-text">Section: <%= course.SectionNumber %>
                        </p>
                      </div>
                    </div>
                    <% }) %>
                      <% } else { %>
                        <p class="text-white">No courses available for the selected criteria.</p>
                        <% } %>
              </div>
            </div>
          </div>
        </div>
    </div>



    </div>

    <script src="sidebar.js"></script>
</body>

</html>