<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Offering</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link href="main.css" rel="stylesheet">
  <link href="course.css" rel="stylesheet">
  
</head>
<body>
  <%# Include your navigation and sidebar %>
  <%- include('NavBar.ejs') %>
  <div id="wrapper">
    <%# Include Sidebar %>
    <%- include('SideBar.ejs') %>
    <div id="page-content-wrapper">
      <div id="Offering">
        <h2 class="text-white">Course Offering</h2>

        <!-- Search Form -->
        <div class="search-container">
          <form id="searchForm" action="/search" method="GET">
            <div class="mb-3">
              <label for="searchInput" class="form-label">Course Code</label>
              <input type="text" id="searchInput" name="CourseCode" class="form-control" placeholder="Search...">
            </div>
            <div class="mb-3">
              <label for="semesterInput" class="form-label">Semester</label>
              <input type="text" id="semesterInput" name="Semester" class="form-control" placeholder="Enter semester...">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
        </div>

        <!-- Display Data -->
        <div class="mt-4">
          <% if (!data) { %>
            <p>No data available.</p>
          <% } else if (data.length === 0) { %>
            <p>No courses found.</p>
          <% } else { %>
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Course Name</th>
                  <th>Credits</th>
                  <th>Days</th>
                  <th>Time</th>
                  <th>Seats</th>
                  <th>Instructor</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(course => { %>
                  <tr>
                    <td><%= course.CourseName %></td>
                    <td><%= course.Credits %></td>
                    <td><%= course.Days %></td>
                    <td><%= course.Time %></td>
                    <td><%= course.NbOfSeats %></td>
                    <td><%= course.FName %> <%= course.LName %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
